#:kivy 1.0.9

#:include smarthome.kv
#:include lcarsbuttons.kv
#:include weather.kv

<TabbedPanelStrip>:
    canvas:
        #Color:
        #    rgba: (0, 1, 0, 1) # green
        Rectangle:
            size: self.size
            pos: self.pos

<RotatedImage>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix

<TabbedIconPanelItem@TabbedPanelItem>:
    img: ''
    background_color: (0, 0, 0, 1)
    spacing: 20, 20, 20, 20
    canvas.before:
        Color:
            rgba: 0, 0, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    canvas:
        Rectangle:
            source: self.img
            size: root.size
            pos: self.pos

