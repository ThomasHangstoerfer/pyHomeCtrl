#:kivy 1.0.9

<LCARSButton>:
    background_color: (1.0, 0.0, 0.0, 1.0)

<TabbedPanelStrip>:
    canvas:
        Color:
            rgba: (0, 1, 0, 1) # green
        Rectangle:
            size: self.size
            pos: self.pos

<RotatedImage>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix

<TabbedIconPanelItem@TabbedPanelItem>:
    img: ''
    background_color: (0, 0, 0, 1)
    spacing: 20, 20, 20, 20
    canvas.before:
        Color:
            rgba: 0, 0, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    canvas:
        Rectangle:
            source: self.img
            size: root.size
            pos: self.pos


<SmartHomeTabbedPanel>:
    id: sh_tab_panel
    do_default_tab: False
    tab_pos: 'top_left'

    TabbedPanelItem:
        id: tab_1
        text: 'Wohnzimmer'
        BoxLayout:
            LCARSButton:
                #on_press:   root.btn_new_on_press()
                text: 'Stehlampe'
            Button:
                #on_press:  root.btn_close_on_press()
                text: 'Deckenlampe'

    TabbedPanelItem:
        id: tab_2
        background_normal: 'home.png'
        text: 'Bad'
        BoxLayout:
            Label:
                #on_press:   root.btn_new_on_press()
                text: 'Temp'
            Label:
                #on_press:  root.btn_close_on_press()
                text: 'Humidity'  

