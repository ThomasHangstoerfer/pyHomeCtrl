<RotatedImage>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix

<TabbedIconPanelItem>:
    img: ''
    background_color: (0, 0, 0, 1)
