
<SmartHomeWohnzimmer>:
    led_r: 0
    led_g: 0
    led_b: 0
    BoxLayout:
        BoxLayout:
            padding: [20,20]
            orientation: 'vertical'
            Button:
                text: 'hoch'
                on_release: root.rolladen_hoch()
            Label:
                text: 'Rolladen ' + root.rolladen
            Button:
                text: 'runter'
                on_release: root.rolladen_runter()
        BoxLayout:
            padding: [20,20]
            orientation: 'vertical'
            Label:
                text: root.deckenlampe
            Button:
                id: btn_deckenlampe
                text: 'Deckenlampe'
                on_release: root.toggle_WzDeckenlampe()
            Label:
                text: ''
        BoxLayout:
            padding: [20,20]
            orientation: 'vertical'
            Label:
                text: root.stehlampe
            Button:
                id: WzStehlampe
                text: 'Stehlampe'
                on_release: root.toggle_WzStehlampe()
            Label:
                text: ''
        BoxLayout:
            padding: [20,20]
            orientation: 'vertical'
            Label:
                canvas:
                    Color:
                        rgba: root.led_r, root.led_g, root.led_b, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: root.rgb
            Button:
                id: led_switch_toggle
                text: 'LED switch'
                on_release: root.toggle_LEDswitch()
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    Button:
                        text: '-'
                        on_release: root.redDown()
                    Label:
                        text: 'RED'
                    Button:
                        text: '+'
                        on_release: root.redUp()
                BoxLayout:
                    Button:
                        text: '-'
                        on_release: root.greenDown()
                    Label:
                        text: 'GREEN'
                    Button:
                        text: '+'
                        on_release: root.greenUp()
                BoxLayout:
                    Button:
                        text: '-'
                        on_release: root.blueDown()
                    Label:
                        text: 'BLUE'
                    Button:
                        text: '+'
                        on_release: root.blueUp()

<SmartHomeBad>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            text: 'Temperatur'
        Label:
            text: root.temp
        Button:
            text: '-'
            on_release: root.tempDown()
        Label:
            text: root.desired_temp
        Button:
            text: '+'
            on_release: root.tempUp()
    BoxLayout:
        Label:
            text: 'Luftfeuchtigkeit'
        Label:
            text: root.hum
    BoxLayout:
        Label:
            text: 'Aktuator'
        Label:
            text: root.actuator
    BoxLayout:
        Label:
            text: 'Fenster'
        Label:
            text: root.window

<SmartHomeTabbedPanel>:
    do_default_tab: False
    tab_pos: 'top_left'
    wohnzimmerItem: wohnzimmerItem
    badItem: badItem

    ExTabbedPanelItem:
        id: wohnzimmerItem
        text: 'Wohnzimmer'
        subwidget: smarthomewohnzimmer
        SmartHomeWohnzimmer:
            id: smarthomewohnzimmer

    ExTabbedPanelItem:
        id: badItem
        #background_normal: 'gfx/home_r.png'
        text: 'Bad'
        subwidget: smarthomebad
        SmartHomeBad:
            id: smarthomebad
