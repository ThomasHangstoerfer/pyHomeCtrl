
<SmartHomeWohnzimmer>:
    led_r: 0
    led_g: 0
    led_b: 0
    BoxLayout:
        BoxLayout:
            padding: [20,20]
            orientation: 'vertical'
            Button:
                text: 'hoch'
                on_release: root.rolladen_hoch()
            Label:
                text: 'Rolladen ' + root.rolladen
            Button:
                text: 'runter'
                on_release: root.rolladen_runter()
        BoxLayout:
            padding: [20,20]
            orientation: 'vertical'
            Label:
                text: root.deckenlampe
            Button:
                id: btn_deckenlampe
                text: 'Deckenlampe'
                on_release: root.toggle_WzDeckenlampe()
            Label:
                text: ''
        BoxLayout:
            padding: [20,20]
            orientation: 'vertical'
            Label:
                text: root.stehlampe
            Button:
                id: WzStehlampe
                text: 'Stehlampe'
                on_release: root.toggle_WzStehlampe()
            Label:
                text: ''
        BoxLayout:
            padding: [20,20]
            orientation: 'vertical'
            Label:
                canvas:
                    Color:
                        rgba: root.led_r/255, root.led_g/255, root.led_b/255, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: root.rgb
            Button:
                id: led_switch_toggle
                text: 'LED switch'
                on_release: root.toggle_LEDswitch()
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    Slider:
                        id: slider_red
                        #size_hint_x: None
                        #width: '48dp'
                        orientation: 'vertical'
                        min: 0
                        max: 255
                        value: root.led_r
                        value_track: True
                        value_track_color: [1, 0, 0, 1]
                        on_value: root.led_r = self.value ; root.set_red_value(self.value)

                    Slider:
                        id: slider_green
                        #size_hint_x: None
                        #width: '48dp'
                        orientation: 'vertical'
                        min: 0
                        max: 255
                        value: root.led_g
                        value_track: True
                        value_track_color: [0, 1, 0, 1]
                        on_value: root.led_g = self.value ; root.set_green_value(self.value)

                    Slider:
                        id: slider_blue
                        #size_hint_x: None
                        #width: '48dp'
                        orientation: 'vertical'
                        min: 0
                        max: 255
                        value: root.led_b
                        value_track: True
                        value_track_color: [0, 0, 1, 1]
                        on_value: root.led_b = self.value ; root.set_blue_value(self.value)

<SmartHomeBad>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            text: 'Temperatur'
        Label:
            text: root.temp
        Button:
            text: '-'
            on_release: root.tempDown()
        Label:
            text: root.desired_temp
        Button:
            text: '+'
            on_release: root.tempUp()
    BoxLayout:
        Label:
            text: 'Luftfeuchtigkeit'
        Label:
            text: root.hum
    BoxLayout:
        Label:
            text: 'Aktuator'
        Label:
            text: root.actuator
    BoxLayout:
        Label:
            text: 'Fenster'
        Label:
            text: root.window

