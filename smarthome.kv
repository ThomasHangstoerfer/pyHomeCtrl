<SmartHomeTabbedPanel>:
    do_default_tab: False
    tab_pos: 'top_left'
    wohnzimmerItem: wohnzimmerItem
    badItem: badItem

    ExTabbedPanelItem:
        id: wohnzimmerItem
        text: 'Wohnzimmer'
        subwidget: smarthomewohnzimmer
        SmartHomeWohnzimmer:
            id: smarthomewohnzimmer

    ExTabbedPanelItem:
        id: badItem
        #background_normal: 'gfx/home_r.png'
        text: 'Bad'
        subwidget: smarthomebad
        SmartHomeBad:
            id: smarthomebad

    ExTabbedPanelItem:
        id: binDa
        #background_normal: 'gfx/home_r.png'
        text: 'Bin da'
        Label:
            text: 'TODO: Anwesenheits-Simulation'

    ExTabbedPanelItem:
