
# Icons:
# http://openweathermap.org/img/w/10d.png


<WeatherWidget>:
    orientation: 'horizontal'
    muell_icon: muell_icon
    ww_cur_cond_icon: ww_cur_cond_icon
    ww_temp: ww_temp
    #ww_temp_min_max: ww_temp_min_max
    ww_inside_temp: ww_inside_temp
    ww_inside_hum: ww_inside_hum
    #ww_wind_speed: ww_wind_speed
    forecast: forecast
    clock_time: clock_time
    clock_date: clock_date
    input_power_pv: input_power_pv
    current_power_consumption: current_power_consumption
    vehicle_soc: vehicle_soc
    vehicle_soc_icon: vehicle_soc_icon
    vehicle_charge_power: vehicle_charge_power
    vehicle_charge_power_direction: vehicle_charge_power_direction
    pv_battery_soc: pv_battery_soc
    pv_battery_soc_icon: pv_battery_soc_icon
    house_to_grid_direction: house_to_grid_direction
    house_to_grid: house_to_grid
    battery_charge_power: battery_charge_power
    battery_charge_power_direction: battery_charge_power_direction
    pet_icon: pet_icon

    #ImageButton:
    #    source: 'gfx/reload1.png'
    #    size_hint: (0.1, 0.1)
    #    right: root.right-self.width
    #    on_release: root.update("")

#    Button:
#        on_release: root.update()
#        size_hint: (0.2, 0.1)
#        right: root.right-self.width/8
#        text: 'Update'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: root.size_hint

        BoxLayout: # Left side of the screen  - New PV-Data Test
            size_hint: (0.5, 1)
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'
                halign: 'center'
                Image: # Sonne
                    size_hint: (1, 0.7)
                    source: 'gfx/weather/w/01d.png'
                    size: (10, 10)
                BoxLayout: # von Sonne ins Haus
                    size_hint: (1, 1)
                    orientation: 'horizontal'
                    Widget:
                        size_hint: (0.45, 1)
                    Image: # Arrow PV to House
                        id: input_power_pv_direction
                        size_hint: (0.1, 1)
                        source: 'gfx/arrow_down.png'
                        size: (20, 20)
                    Label:
                        id: input_power_pv
                        size_hint: (0.45, 1)
                        text: ''
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        font_size:30
                BoxLayout:
                    size_hint: (1, 1.1)
                    orientation: 'horizontal'
                    BoxLayout:
                        orientation: 'vertical'
                        Image: # Battery Icon
                            id: pv_battery_soc_icon
                            source: 'gfx/SoC/SoC_30.png'
                            size: (20, 20)
                        Label: # Battery SoC
                            id: pv_battery_soc
                            text: ''
                            font_size:30
                    BoxLayout:
                        orientation: 'vertical'
                        Label: # von Batterie ins Haus
                            id: battery_charge_power
                            text: ''
                            font_size:20
                        Image: # Arrow Battery Charge Power
                            id: battery_charge_power_direction
                            #size_hint: (0.1, 1)
                            source: 'gfx/arrow_right.png'
                            size: (20, 20)
                        Widget:
                    BoxLayout:
                        orientation: 'vertical'
                        ImageButton:
                            id: house_icon
                            source: 'gfx/home_w.png'
                            size: (60, 60)
                            on_release: root.showPVPopup("")
                        Label: # Current Power Consumption
                            id: current_power_consumption
                            text: ''
                            font_size:30
                    BoxLayout: # vom Haus ins Auto
                        orientation: 'vertical'
                        Label:
                            id: vehicle_charge_power
                            text: ''
                            font_size:20
                        Image: # Arrow House to Vehicle
                            id: vehicle_charge_power_direction
                            #size_hint: (0.1, 1)
                            source: 'gfx/arrow_right.png'
                            size: (20, 20)
                        Widget:
                    BoxLayout:
                        orientation: 'vertical'
                        ImageButton:
                            id: vehicle_soc_icon
                            source: 'gfx/evehicle.png'
                            size: (60, 60)
                            on_release: root.showVehiclePopup("")
                        Label: # Vehicle SoC
                            id: vehicle_soc
                            text: ''
                            font_size:30
                BoxLayout: # von Haus ins Netz
                    orientation: 'horizontal'
                    size_hint: (1, 1)
                    Widget:
                        size_hint: (0.45, 1)
                    Image: # Arrow House to Grid
                        id: house_to_grid_direction
                        size_hint: (0.1, 1)
                        source: 'gfx/arrow_down.png'
                        size: (20, 20)
                    Label:
                        id: house_to_grid
                        size_hint: (0.45, 1)
                        text: ''
                        font_size:30
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                Image: # Strommasten
                    source: 'gfx/power_grid.png'
                    size_hint: (1, 0.7)
                    width: 10

        BoxLayout: # Right side of the screen
            orientation: 'vertical'
            size_hint: (0.5, 1)

            BoxLayout: # Current + Forecast
                size_hint: (1, 0.3)
                #canvas.before:
                #    Color:
                #        rgba: 0.6, 0.4, 0.4, 1
                #    Rectangle:
                #        pos: self.pos
                #        size: self.size
                orientation: 'horizontal'
                halign: 'right'

                BoxLayout: # Icon + Temp
                    orientation: 'vertical'
                    size_hint: root.size_hint
                    Image:
                        size_hint: (1, 0.25)
                        id: ww_cur_cond_icon
                        size: (50, 50)
                    Label:
                        size_hint: (1, 0.25)
                        id: ww_temp
                        text: ''
                        font_size: 40

                BoxLayout: # Forecast + Muell-Icon
                    size_hint: (0.75, 1)
                    orientation: 'vertical'
                    WeatherForecastWidget:
                        size_hint: (1, 0.5)
                        id: forecast
                    Image:
                        size_hint: (1, 0.5)
                        id: muell_icon
                        size: (50, 50)

            BoxLayout: # Empty space between Weather + Clock
                size_hint: (1, 0.1)
                #canvas.before:
                #    Color:
                #        rgba: 0.4, 0.4, 0.5, 1
                #    Rectangle:
                #        pos: self.pos
                #        size: self.size
                #Widget:
                Image:
                    #size_hint: (1, 0.5)
                    id: pet_icon
                    source: 'gfx/pets/empty.png'
                    #size: (50, 50)



            BoxLayout: # Temp + Date + Clock
                size_hint: (1, 0.25)
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (1, 0.25)
                    Label:
                        id: ww_inside_temp
                        size_hint: (0.25, 0.25)
                        halign: 'left'
                        text: ''
                        font_size: 35
                    Label:
                        id: clock_date
                        size_hint: (0.5, 0.25)
                        text: ''
                        font_size: 35
                    Label:
                        id: ww_inside_hum
                        size_hint: (0.25, 0.25)
                        halign: 'left'
                        halign: 'center'
                        text: ''
                        font_size: 35
                Label:
                    id: clock_time
                    size_hint: (1, 0.5)
                    halign: 'right'
                    text: ''
                    font_size: 85
            #Label:
            #    id: clock_date
            #    text: ''
            #    font_size: 25

