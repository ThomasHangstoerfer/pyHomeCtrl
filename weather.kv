<WeatherWidget>:
    orientation: 'horizontal'
    muell_icon: muell_icon
    ww_cur_cond_icon: ww_cur_cond_icon
    ww_temp: ww_temp
    #ww_temp_min_max: ww_temp_min_max
    ww_inside_temp: ww_inside_temp
    ww_inside_hum: ww_inside_hum
    #ww_wind_speed: ww_wind_speed
    forecast: forecast
    clock_time: clock_time
    clock_date: clock_date
    dbg_lux: dbg_lux
    dbg_active_power: dbg_active_power
    vehicle_soc: vehicle_soc
    vehicle_charge_power: vehicle_charge_power
    vehicle_soc_icon: vehicle_soc_icon
    pv_battery_soc: pv_battery_soc
    pv_battery_soc_icon: pv_battery_soc_icon

    ImageButton:
        img: 'gfx/reload1.png'
        size_hint: (0.1, 0.1)
        right: root.right-self.width
        on_release: root.update("")

#    Button:
#        on_release: root.update()
#        size_hint: (0.2, 0.1)
#        right: root.right-self.width/8
#        text: 'Update'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: root.size_hint

        BoxLayout: # Left side of the screen  - PV-Data
            size_hint: (0.5, 1)
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, 0.5)
                #canvas.before:
                #    Color:
                #        rgba: 0.4, 0.7, 0.5, 1
                #    Rectangle:
                #        pos: self.pos
                #        size: self.size
                BoxLayout: # Vehicle SoC Icon + Text
                    orientation: 'vertical'
                    Image:
                        size_hint: (1, 0.75)
                        id: vehicle_soc_icon
                        size: (50, 50)
                    Label:
                        size_hint: (1, 0.25)
                        id: vehicle_soc
                        text: ''
                        font_size:40
                    Label:
                        size_hint: (1, 0.25)
                        id: vehicle_charge_power
                        text: ''
                        font_size:40
                BoxLayout: # PV-Battery SoC Icon + Text
                    orientation: 'vertical'
                    Image:
                        size_hint: (1, 0.75)
                        id: pv_battery_soc_icon
                        size: (50, 50)
                    Label:
                        size_hint: (1, 0.25)
                        id: pv_battery_soc
                        text: ''
                        font_size:40
                    Widget: # Empty Space
                        size_hint: (1, 0.25)

            BoxLayout: # PV-Data
                size_hint: (1, 0.5)
                orientation: 'vertical'
                Widget: # Empty Space
                Widget: # Empty Space
                Label:
                    id: dbg_lux
                    text: ''
                    font_size: 40
                Label:
                    id: dbg_active_power
                    text: ''
                    font_size: 40

        BoxLayout: # Right side of the screen
            orientation: 'vertical'
            size_hint: (0.5, 1)

            BoxLayout: # Current + Forecast
                size_hint: (1, 0.3)
                #canvas.before:
                #    Color:
                #        rgba: 0.6, 0.4, 0.4, 1
                #    Rectangle:
                #        pos: self.pos
                #        size: self.size
                orientation: 'horizontal'
                halign: 'right'

                BoxLayout: # Icon + Temp
                    orientation: 'vertical'
                    size_hint: root.size_hint
                    Image:
                        size_hint: (1, 0.25)
                        id: ww_cur_cond_icon
                        size: (50, 50)
                    Label:
                        size_hint: (1, 0.25)
                        id: ww_temp
                        text: ''
                        font_size: 40

                BoxLayout: # Forecast + Muell-Icon
                    size_hint: (0.75, 1)
                    orientation: 'vertical'
                    WeatherForecastWidget:
                        size_hint: (1, 0.5)
                        id: forecast
                    Image:
                        size_hint: (1, 0.5)
                        id: muell_icon
                        size: (50, 50)

            BoxLayout: # Empty space between Weather + Clock
                size_hint: (1, 0.10)
                #canvas.before:
                #    Color:
                #        rgba: 0.4, 0.4, 0.5, 1
                #    Rectangle:
                #        pos: self.pos
                #        size: self.size
                Widget:



            BoxLayout: # Temp + Date + Clock
                size_hint: (1, 0.25)
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (1, 0.25)
                    Label:
                        id: ww_inside_temp
                        size_hint: (0.25, 0.25)
                        halign: 'left'
                        text: ''
                        font_size: 35
                    Label:
                        id: clock_date
                        size_hint: (0.5, 0.25)
                        text: ''
                        font_size: 35
                    Label:
                        id: ww_inside_hum
                        size_hint: (0.25, 0.25)
                        halign: 'left'
                        halign: 'center'
                        text: ''
                        font_size: 35
                Label:
                    id: clock_time
                    size_hint: (1, 0.5)
                    halign: 'right'
                    text: ''
                    font_size: 85
            #Label:
            #    id: clock_date
            #    text: ''
            #    font_size: 25

